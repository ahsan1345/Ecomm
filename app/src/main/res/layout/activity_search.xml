<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Animation.Design.BottomSheetDialog"
    tools:context=".Screens.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/back"
                android:layout_marginRight="10dp"
                style="@style/Animation.Design.BottomSheetDialog"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:fontFamily="@font/poppins_bold"
                android:textSize="28sp"
                android:layout_weight="1"
                android:textColor="@color/textcolor"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="15dp"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="10dp"
            style="@style/Animation.Design.BottomSheetDialog">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search"
                app:tint="#A6A6A6" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:hint="Search Here"
                android:textColorHint="#BDBDBD"
                android:layout_marginHorizontal="10dp"
                android:textSize="16sp"
                android:background="@color/transparent"
                android:maxLines="1"
                android:minLines="1"
                android:maxLength="30"
                android:fontFamily="@font/poppins_bold"
                style="@style/Animation.Design.BottomSheetDialog"/>

            <ImageView
                android:id="@+id/clear_text"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/close"
                app:tint="#CACACA"
                android:visibility="gone"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/filterBtn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/filter"
                app:tint="@color/myTheme" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifyBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='Result for “'
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                style="@style/Animation.Design.BottomSheetDialog"/>
            <TextView
                android:id="@+id/searchedWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='search here...'
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/myTheme"
                android:maxLength="20"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='”'
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                style="@style/Animation.Design.BottomSheetDialog"/>

            <TextView
                android:id="@+id/totalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text='0 found'
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/myTheme"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/notfoundContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                style="@style/Animation.Design.BottomSheetDialog"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Found"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="24sp"
                    style="@style/Animation.Design.BottomSheetDialog"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorry, the keyword you entered cannot be found, please check again or search with another keyword."
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    style="@style/Animation.Design.BottomSheetDialog"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@drawable/search_frame"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Products"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="24sp"
                    android:textColor="@color/textcolor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The keyword you entered can be found."
                    android:fontFamily="@font/poppins_bold"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    style="@style/Animation.Design.BottomSheetDialog"/>


            </LinearLayout>

        </LinearLayout>

        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:paddingHorizontal="20dp"
            android:verticalSpacing="10dp"
            android:visibility="gone"
            tools:listitem="@layout/product_listview" />

    </LinearLayout>

</LinearLayout>
