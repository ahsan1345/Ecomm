<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Khalid" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/myTheme</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myThemelight</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/myTheme</item>
    </style>

    <style name="Theme.Khalid" parent="Base.Theme.Khalid" />

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
    <style name="EcommButton">
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EcommButtonSecondary">
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:backgroundTint">#E6F8EF</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/myTheme</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>